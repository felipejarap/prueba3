 <center>
  <h1>Todo</h1>
 </center>
  <div class="row">
    <div class="col-md-8 offset-md-1">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.description %></td>
          <td><%= link_to 'Show', todo_path(todo), class:'btn btn-success' %></td>
          <td><%= link_to 'Edit', edit_path(todo), class:'btn btn-info' %></td>
          <td><%= link_to 'Destroy',delete_path(todo), class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Estás seguro de eliminarlo? ' } %></td>
          <td><%= link_to 'Completed',complete_path(todo),class: "btn btn-warning",
              data: { confirm: 'Estás seguro de completarlo? ' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="col-md-2">
    <%= link_to 'new todo', new_path%>
  </div>
</div>